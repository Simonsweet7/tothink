#include <iostream>
#include<string>

using namespace std;

struct Student {
    string name;
    int number;
    string sex;
    int age;
    string birthPlace;
    string birthDate;
    string major;
};
int main()
{
    string name[3];
    int age[3];
    for(int i=0;i<3;i++)
    {
        cout<<"Enter tne name:";
        getline(cin,name[i]);
        cout<<"Enter the age:";
        cin>>age[i];
    }
    for(int i=0;i<3;i++)
    {
        cout<<name[i]<<endl;
        cout<<age[i]<<endl;
    }
    return 0;
}
